# Dockerfile for AGI Experimental Framework
# Container for development of the framework
# http://agi.io

FROM ubuntu:15.04

MAINTAINER Gideon Kowadlo <gideon@agi.io>

RUN apt-get update && apt-get install -y \
maven \ 
openjdk-8-jdk \
postgresql postgresql-contrib

# Use docker specific variables.sh file (install of default at /bin/variables.sh)
ENV VARIABLES_FILE variables-docker.sh

# Install dependencies - setup environment (build and install libs)
WORKDIR /tmp
ADD experimental-framework/bin bin
ADD experimental-framework/lib lib
ADD algorithms/code algorithms/code

WORKDIR bin/node_coordinator
RUN /bin/bash -c "./build-libs.sh"

WORKDIR /root/dev/agi
CMD ["bash"]